<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/tab_padding"
    android:paddingRight="@dimen/tab_padding">

    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ok_btn"
        android:inputType="textUri"
        android:text="@string/tab.settings.url_hint"/>

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        app:layout_constraintTop_toBottomOf="@id/url"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"
        android:text="@string/general.clear_log" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        app:layout_constraintTop_toBottomOf="@id/url"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"
        android:text="@string/general.ok"/>

    <TextView
        android:id="@+id/trust_unsecure_ssl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_button_margin"
        app:layout_constraintTop_toBottomOf="@id/ok_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/tab.settings.ssl_title"/>

    <Switch
        android:id="@+id/ssl_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_button_margin"
        app:layout_constraintTop_toBottomOf="@id/ok_btn"
        app:layout_constraintRight_toRightOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/log_area_margin"
        android:layout_marginBottom="@dimen/log_area_margin_bottom"
        app:layout_constraintTop_toBottomOf="@id/ssl_switch"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/navigationBarColor"
            android:textIsSelectable="true"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>